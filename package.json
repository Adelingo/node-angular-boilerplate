{
  "name": "node-angular-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate project with node.js and angular",
  "main": "index.js",
  "scripts": {
    "load": "npm i && concurrently \"npm run load:server\" \"npm run load:client\"",
    "load:server": "cd ./server && npm i",
    "load:client": "cd ./client && npm i",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd ./server && npm run start",
    "start:client": "cd ./client && npm run start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd ./server && npm run dev",
    "dev:client": "cd ./client && npm run dev",
    "lint": "concurrently \"npm run lint:server\" \"npm run lint:client\"",
    "lint:server": "cd ./server && npm run lint",
    "lint:client": "cd ./client && npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.5.1"
  }
}
